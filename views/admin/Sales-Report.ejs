<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>

<script>
  function generateDailyReport(total, orders, count) {
    var doc = new jsPDF()

    doc.autoTable({
      head: [
        ['#', 'Total Revenue', 'No of products sold', 'Orders Count']
      ],
      body: [
        ['1', total, orders, count]
      ]
    })
    doc.save('Daily Sales Report.pdf')

  }



  function generateYearlyReport(total, orders, count) {
    var doc = new jsPDF()

    doc.autoTable({
      head: [
        ['#', 'Total Revenue', 'No of products sold', 'Orders Count']
      ],
      body: [
        ['1', total, orders, count]
      ]

    })
    doc.save('Yearly Sales Report.pdf')

  }

  function generateMontlyReport(total, orders, count) {
    var doc = new jsPDF()


    $.ajax({
      url: 'generate-PDF-monthly',
      method: 'get',
      success: (response) => {
        if (response.status) {
          monthlyReport(response.data[0])
        }
      }
    })



    function monthlyReport(data) {

      doc.autoTable({
        head: [
          ['#', 'Total Revenue', 'No of products sold', 'Orders Count']
        ],
        body: [
          ['1', data.total, data.orders, data.count]
        ]

      })
      doc.save('Monthly Report.pdf')
    }

  }

  function everyMonth(data) {
    var doc = new jsPDF()

    doc.autoTable({
      html: '#my-table'
    })

    doc.save('Monthly Report.pdf')
  }

  function everyDay(data) {
    var doc = new jsPDF()

    doc.autoTable({
      html: '#everyDay-table'
    })

    doc.save('Every Day Report.pdf')
  }
</script>